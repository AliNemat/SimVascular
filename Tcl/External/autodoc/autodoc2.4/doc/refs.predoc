imgConverter ps2gif {
    exec pstogif -flip cw -density 100 -out %tmp% %in%
    exec giftopnm %tmp% | ppmtogif -trans #ffffff > %out%
}

imgConverter transXpm2gif {
    exec convert %in% %tmp%.gif
    file copy %tmp%.gif %out%
}


imgDef org_overview \
	"General organisation of the generated documentation" \
	ps2gif gif doc/scheme.of.things.ps

imgDef upArrow "" transXpm2gif gif doc/up.xpm
