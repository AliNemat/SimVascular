# -------------------------------------------------
# image definitions

imgConverter ps2gif {
    exec pstogif -flip cw -density 100 -out %tmp% %in%
    exec giftopnm %tmp% | ppmtogif -trans #ffffff > %out%
}

imgConverter transXpm2gif {
    exec convert %in% %tmp%.gif
    file copy %tmp%.gif %out%
}

imgDef pop3_statem  "Statemachine of the POP3 client core" \
	ps2gif gif doc/pictures/p3c.ps
imgDef pop3_current "Current configuration of my mail fetching system" \
	ps2gif gif doc/pictures/cfg.current.ps
imgDef pop3_future1 "Possible future of my mail fetcher" \
	ps2gif gif doc/pictures/cfg.future.1.ps
imgDef pop3_future2 "Another possible future of my mail fetcher" \
	ps2gif gif doc/pictures/cfg.future.2.ps

imgDef pop3server  "Server structure" \
	ps2gif gif doc/pictures/p3s.ps

