if {[string compare test [info procs test]] == 1} then {source defs}


test base-math-1.0 {max, min} {
    set     result [::pool::math::min 3 5]
    lappend result [::pool::math::max 1 2]
    set result
} {3 2}

test base-math-1.1 {maxList, minList} {
    set     result [::pool::math::minList {3 5 1 3 5 6 0 -1}]
    lappend result [::pool::math::maxList {1 2 5 2 -1 8 5}]
    set result
} {-1 8}

test base-math-1.2 {maxVarargs, minVarargs} {
    set     result [::pool::math::minVarargs 3 5 1 3 5 6 0 -1]
    lappend result [::pool::math::maxVarargs 1 2 5 2 -1 8 5]
    set result
} {-1 8}
